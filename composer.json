{
  "name": "arraypress/wp-utils",
  "description": "A comprehensive utility library for WordPress plugin development, offering a rich set of helper classes and methods for efficient handling of posts, terms, users, and other WordPress elements.",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/arraypress/wp-utils/",
  "authors": [
    {
      "name": "David Sherlock",
      "homepage": "https://arraypress.com/"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-calendar": "*",
    "ext-ctype": "*",
    "ext-json": "*",
    "ext-intl": "*",
    "ext-simplexml": "*",
    "ext-dom": "*",
    "ext-mbstring": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-mysqli": "*",
    "ext-bcmath": "*",
    "ext-iconv": "*",
    "ext-libxml": "*"
  },
  "autoload": {
    "psr-4": {
      "ArrayPress\\Utils\\": "src/"
    },
    "files": [
      "src/Functions/HTML.php",
      "src/Functions/Posts.php",
      "src/Functions/PostTypes.php",
      "src/Functions/Register.php",
      "src/Functions/Taxonomies.php",
      "src/Functions/Terms.php",
      "src/Functions/Users.php",
      "src/Polyfills/Mdash.php",
      "src/Polyfills/Misc.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/arraypress/wp-utils/issues",
    "source": "https://github.com/arraypress/wp-utils"
  },
  "keywords": [
    "wordpress",
    "utilities",
    "plugin-development",
    "helper-classes"
  ]
}
